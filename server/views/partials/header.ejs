  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body class="bg-light text-light">
  <!-- Main Nav bar  -->  
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="/assets/images/team_logo.png" alt="logo">
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto mb-2">
          <ul class="navbar-nav h5">

            <li class="nav-item">
              <% if (title == "Home") { %>
                <a class="nav-link active" href="/">
              <% } else { %>
                <a class="nav-link" href="/">
              <% } %>            
                <i class="fas fa-home"></i> Home </a>
              </a>
            </li>  

            <li class="nav-item">
              <% if (title == "Incident Dashboard") { %>
                <a class="nav-link active" href="incident/list">
              <% } else { %>
                <a class="nav-link" href="incident/list">
              <% } %>            
                <i class="fas fa-th-list"></i>  Incident Dashboard </a>
              </a>
            </li>   
            
            <li class="nav-item">
              <% if(typeof username == 'string' && username){ %>
                <div class="dropdown">
                  
                  <button class="btn" 
                    style="font-weight: bold;"
                    type="button" 
                    id="dropdownMenuButton1" 
                    data-bs-toggle="dropdown" 
                    aria-expanded="false">
                    <i class="fas fa-lg fa-user text-light"></i> 
                    <strong class="text-light h5">Hello, <%= username %></strong>
                  </button>

                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li class="nav-item">
                      <a class="dropdown-item" href="/settings" class="nav-link">
                        <i class="fas fa-cogs"></i>
                        Settings
                      </a>
                    </li>

