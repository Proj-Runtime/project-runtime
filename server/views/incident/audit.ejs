<%- include ../partials/header.ejs %>

<!-- Content for the Add_Edit page -->
<div class="mx-5 my-4 bg-white rounded-3">
  <main class="text-dark">
    <div class="mx-3">

      <h1 class="text-center pt-3 pb-0 mb-0"><%= title %></h1>

      <div class="pb-4">
        <p class="fs-4">Record Number: <span class="fs-5 fw-bold"><%= incident.RecordNumber %></span></p>
        <p class="fs-4">Status: <span class="fs-5 fw-bold"><%= incident.Status %></span></p>
        <p class="fs-4">Date Created: <span class="fs-5 fw-bold"><%= incident.CreatedDate.toLocaleDateString(undefined, 
          { year: 'numeric', month: 'long', day: 'numeric'}) %></span></p>
        <p class="fs-4">Requester Name: <span class="fs-5 fw-bold"><%= incident.RequesterName %></span></p>
        <p class="fs-4">Technician Name: <span class="fs-5 fw-bold"><%= incident.Technician %></span></p>
        <p class="fs-4">Priority: <span class="fs-5 fw-bold"><%= incident.Priority %></span></p>
        <p class="fs-4">Description: <span class="fs-5 fw-bold"><%= incident.Description %></span></p>
        <p class="fs-4">Narrative: <span class="fs-5 fw-bold"><%= incident.Narrative %></span></p>
        <p class="fs-4">Timestamped: <span class="fs-5 fw-bold"><%= incident.TimeStamped %></span></p>

        <% if (incident.Status == "Closed") { %>
          <p class="fs-4">Resolution Field: <span class="fs-5 fw-bold"><%= incident.Resolution %></span></p>
        <% } %> 

        <div class="pt-5 text-center">
          <a href="/incident/list" class="btn btn-warning">
            <i class="fas fa-arrow-alt-circle-left"></i>  
            Back to Incident List
          </a>
        </div>
      </div>

    </div>
  </main>
</div>

<%- include ../partials/footer.ejs %>