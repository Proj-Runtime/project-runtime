<%- include ../partials/header.ejs %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 class="text-center pt-5 pb-3"><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= incident._id %>"
                    >
                    <label for="requestTextField">Customer Name</label>
                    <input type="text" class="form-control"
                        id="requestTextField"
                        placeholder="Enter first and last name."
                        name="RequesterName" 
                        value="<%= incident.RequesterName %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="descTextField">Description</label>
                    <input type="text" class="form-control"
                        id="descTextField"
                        placeholder="Enter the incident description."
                        name="Description" 
                        value="<%= incident.Description %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="narTextField">Narrative</label>
                    <input type="text" class="form-control"
                        id="narTextField"
                        placeholder="Enter the incident narrative."
                        name="Narrative" 
                        value="<%= incident.Narrative %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="priorityTextField">Priority</label>
                    <input type="text" class="form-control"
                        id="priorityTextField"
                        placeholder="Enter the priority."
                        name="Priority" 
                        value="<%= incident.Priority %>"
                        readonly>
                </div>
                <br />
                <div class="form-group">
                    <label for="techTextField">Technician</label>
                    <input type="text" class="form-control"
                        id="techTextField"
                        placeholder="Enter the technician name."
                        name="Technician" 
                        value="<%= incident.Technician %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="statTextField">Status</label>
                    <input type="text" class="form-control"
                        id="statTextField"
                        placeholder="Enter the status of the incident."
                        name="Status" 
                        value="<%= incident.Status %>"
                        readonly>
                </div>
                <br />
                <div class="form-group">
                    <label for="dateTextField">Date</label>
                    <input type="text" class="form-control"
                        id="dateTextField"
                        placeholder="Enter the CreatedDate"
                        name="CreatedDate" 
                        value="<%= incident.CreatedDate %>"
                        readonly>
                </div>
                <br />

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/incident/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>